{
   "name": "Ip-detector",
   "version": "1.0",
   "description": "Detect the current public IP address and display below details.",
   "manifest_version": 2,
   "author": "Yerlinson Maturana",
   "icons": {
       "16": "src/icon16.png",
       "48": "src/icon48.png",
       "128": "src/icon128.png"
   },
   "browser_action": {
       "default_title": "Urifav",
       "default_icon": "src/icon.png",
       "default_popup": "popup.html"
   },
   "background": {
       "page": "src/background.html"
   },
   "permission": [
       "notifications",
       "storage",
       "tabs",
       "http://*/*", "https://*/*",
       "https://api.ipify.org/?format=json/*",
       "cookies" 
    ],
    "web_accessible_resources": [
        "src/icon48.png"
    ]
}